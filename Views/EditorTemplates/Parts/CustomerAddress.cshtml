@model OShop.ViewModels.CustomerAddressEditViewModel
@using OShop.Extensions

@{
    Script.Require("OShop");
}

<div class="row">
    <div class="col-xs-12 col-sm-6">
        <fieldset>
            @Html.HiddenFor(m => m.CustomerId)
            <div class="form-group">
                @Html.LabelFor(m => m.AddressAlias, T("Address alias").Text, new { @class = "required" })
                @Html.TextBoxFor(m => m.AddressAlias, new { @class = "text medium form-control" })
                @Html.ValidationMessageFor(m => m.AddressAlias, "*")
                <span class="hint">@T("(e.g.: Home, Office...)")</span>
            </div>
            <div class="form-group hidden">
                @Html.CheckBoxFor(m => m.IsDefault)
                @Html.LabelFor(m => m.IsDefault, T("Set as default address").Text, new { @class = "forcheckbox" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Company, T("Company"))
                @Html.TextBoxFor(m => m.Company, new { @class = "text medium form-control" })
                @Html.ValidationMessageFor(m => m.Company, "*")
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, T("First name").Text, new { @class = "required" })
                @Html.TextBoxFor(m => m.FirstName, new { @class = "text medium form-control" })
                @Html.ValidationMessageFor(m => m.FirstName, "*")
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, T("Last name").Text, new { @class = "required" })
                @Html.TextBoxFor(m => m.LastName, new { @class = "text medium form-control" })
                @Html.ValidationMessageFor(m => m.LastName, "*")
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address1, T("Address").Text, new { @class = "required" })
                @Html.TextBoxFor(m => m.Address1, new { @class = "text medium form-control" })
                @Html.ValidationMessageFor(m => m.Address1, "*")
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address2, T("Address 2").Text, new { @class = "required" })
                @Html.TextBoxFor(m => m.Address2, new { @class = "text medium form-control" })
                @Html.ValidationMessageFor(m => m.Address2, "*")
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Zipcode, T("Zip code").Text, new { @class = "required" })
                @Html.TextBoxFor(m => m.Zipcode, new { @class = "text medium form-control" })
                @Html.ValidationMessageFor(m => m.Zipcode, "*")
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.City, T("City").Text, new { @class = "required" })
                @Html.TextBoxFor(m => m.City, new { @class = "text medium form-control" })
                @Html.ValidationMessageFor(m => m.City, "*")
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CountryId, T("Country").Text, new { @class = "required" })
                @Html.DropDownListFor(m => m.CountryId, Model.Countries.BuildCountrySelectList(), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CountryId)
            </div>
            <div id="@Html.FieldIdFor(m => m.StateId)Holder">
                @Html.LabelFor(m => m.StateId, T("State").Text, new { @class = "required" })
                @Html.DropDownListFor(m => m.StateId, Model.States.BuildStateSelectList())
                @Html.ValidationMessageFor(m => m.StateId)
            </div>
        </fieldset>
    </div>
</div>



@using (Script.Foot()) {
    <script type="text/javascript">
        //<![CDATA[
        $(function () {
            $("#@Html.FieldIdFor(m => m.StateId)Holder").OShopStateSelector("@Url.Action("States", "Locations", new { area = "OShop" })/", "#@Html.FieldIdFor(m => m.CountryId)");
        })
        //]]>
    </script>
}